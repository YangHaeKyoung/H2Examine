<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t](%-35c{1}:%-3L) %m%n" />
		</layout>
	</appender>

	<!-- debug level log -->
	<appender name="daily" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="c:/logs/ris/daily.log" />
		<param name="datePattern" value="'.'yyyy-MM-dd" />
		<param name="append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t](%-35c{1}:%-3L) %m%n" />
		</layout>
	</appender>

	<!-- info level log -->
	<appender name="info" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="c:/logs/ris/info.log" />
		<param name="Threshold" value="INFO" />
		<param name="datePattern" value="'.'yyyy-MM-dd" />
		<param name="append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t](%-35c{1}:%-3L) %m%n" />
		</layout>
	</appender>

	<!-- warn level log -->
	<appender name="warn" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="c:/logs/ris/warn.log" />
		<param name="Threshold" value="WARN" />
		<param name="datePattern" value="'.'yyyy-MM-dd" />
		<param name="append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t](%-35c{1}:%-3L) %m%n" />
		</layout>
	</appender>

	<!-- error level log -->
	<appender name="error" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="c:/logs/ris/error.log" />
		<param name="Threshold" value="ERROR" />
		<param name="datePattern" value="'.'yyyy-MM-dd" />
		<param name="append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t](%-35c{1}:%-3L) %m%n" />
		</layout>
	</appender>

	<logger name="com.navercorp" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="daily" />
		<appender-ref ref="console"/>
	</logger>
	<logger name="com.nhncorp" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="daily" />
		<appender-ref ref="console"/>
	</logger>

	<logger name="org.springframework" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="daily" />
		<appender-ref ref="console"/>
	</logger>
	<logger name="org.springframework.security" additivity="true">
		<level value="WARN" />
		<appender-ref ref="daily" />
		<appender-ref ref="console"/>
	</logger>

	<logger name="java.sql.Connection" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="daily" />
		<appender-ref ref="console"/>
	</logger>
	<logger name="java.sql.PreparedStatement" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="daily" />
		<appender-ref ref="console"/>
	</logger>
	<logger name="java.sql" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="daily" />
		<appender-ref ref="console"/>
	</logger>
	<logger name="org.mybatis" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="daily" />
		<appender-ref ref="console"/>
	</logger>
	<logger name="org.apache" additivity="true">
		<level value="WARN" />
		<appender-ref ref="daily" />
		<appender-ref ref="console"/>
	</logger>
	<logger name="org.springframework.beans.TypeConverterDelegate">
		<level value="error" />
	</logger>

	<root>
		<level value="INFO" />
		<appender-ref ref="info" />
		<appender-ref ref="warn" />
		<appender-ref ref="error" />
	</root>
</log4j:configuration>